require './button.scss'

module.exports = React.createClass
	getDefaultProps: ->
		value: 'Button'

	focus: ->
		ReactDOM.findDOMNode(@refs.button).focus()

	render: ->
		`<div className={"obojobo-draft--components--button" + (this.props.dangerous ? ' dangerous' : '') + (this.props.altAction ? ' alt-action' : '')}>
			<button
				ref='button'
				onClick={this.props.onClick}
				tabIndex={this.props.shouldPreventTab ? '-1' : this.props.tabIndex}
				disabled={this.props.shouldPreventTab}
			>{this.props.value}</button>
		</div>`