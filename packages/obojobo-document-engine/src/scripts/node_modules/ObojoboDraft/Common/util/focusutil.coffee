Dispatcher = require 'ObojoboDraft/Common/flux/dispatcher'
OboModel = require 'ObojoboDraft/Common/models/obomodel'

FocusUtil =
	focusComponent: (id) ->
		Dispatcher.trigger 'focus:component',
			value:
				id: id

	unfocus: ->
		Dispatcher.trigger 'focus:unfocus'

	getFocussedComponent: (state) ->
		OboModel.models[state.focussedId]



module.exports = FocusUtil