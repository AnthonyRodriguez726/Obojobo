require './logo.scss'

NavUtil = require 'Viewer/util/navutil'
logo = require 'svg-url?noquotes!./obojobo-logo.svg'

OBO = window.OBO
Common = window.ObojoboDraft.Common
getBackgroundImage = Common.util.getBackgroundImage

Logo = React.createClass

	render: ->
		bg = getBackgroundImage(logo)

		`<div className={'viewer--components--logo' + (this.props.inverted ? ' is-inverted' : ' is-not-inverted')} style={
			{
				backgroundImage: bg
			}
		}>
			Obojobo
		</div>`

module.exports = Logo
