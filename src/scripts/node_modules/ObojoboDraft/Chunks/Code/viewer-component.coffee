require './viewer-component.scss'

Common = window.ObojoboDraft.Common

OboComponent = Common.components.OboComponent
TextGroupEl = Common.chunk.textChunk.TextGroupEl
TextChunk = Common.chunk.TextChunk

Code = React.createClass
	render: ->
		texts = this.props.model.modelState.textGroup.items.map ((textItem, index) ->
			`<TextGroupEl parentModel={this.props.model} textItem={textItem} groupIndex={index} key={index} />`
		).bind(@)

		`<OboComponent model={this.props.model} moduleData={this.props.moduleData}>
			<TextChunk className="obojobo-draft--chunks--single-text pad">
				<pre><code>{texts}</code></pre>
			</TextChunk>
		</OboComponent>`

module.exports = Code