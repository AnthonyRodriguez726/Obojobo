Common = window.ObojoboDraft.Common

Image = React.createClass
	render: ->
		data = @props.chunk.modelState

		if not data.url?
			imgStyles =
				backgroundImage: Common.util.getBackgroundImage require('svg-url?noquotes!./assets/bg.svg')
				backgroundSize: '16px'
				height: '300px'

			return `<div className="img-placeholder" style={imgStyles} />`

		switch data.size
			when 'small', 'medium', 'large'
				`<img src={data.url} unselectable="on" />`
			when 'custom'
				imgStyles = {}

				if data.width?
					imgStyles.width = data.width + 'px'

				if data.height?
					imgStyles.height = data.height + 'px'

				`<img src={data.url} unselectable="on" style={imgStyles} />`


module.exports = Image