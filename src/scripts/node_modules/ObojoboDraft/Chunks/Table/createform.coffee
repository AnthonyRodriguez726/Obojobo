module.exports = React.createClass
	getInitialState: ->
		return {
			rows: @props.rows
			cols: @props.cols
		}

	onUpdateRows: (event) ->
		@setState {
			rows: ~~event.target.value
		}

		@props.onChange ~~event.target.value, @state.cols

	onUpdateCols: (event) ->
		@setState {
			cols: ~~event.target.value
		}

		@props.onChange @state.rows, ~~event.target.value

	render: ->
		`<div>
			<label>rows:</label>
			<input type="number" value={this.state.rows} onChange={this.onUpdateRows} />
			<label>cols:</label>
			<input type="number" value={this.state.cols} onChange={this.onUpdateCols} />
		</div>`