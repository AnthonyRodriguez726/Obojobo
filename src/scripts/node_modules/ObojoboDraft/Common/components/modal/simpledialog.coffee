require './simpledialog.scss'

ModalUtil = require 'ObojoboDraft/Common/util/modalutil'
Dialog = require 'ObojoboDraft/Common/components/modal/dialog'

module.exports = React.createClass
	getDefaultProps: ->
		ok: false
		noYes: false
		yesNo: false
		cancelOk: false
		onCancel: -> ModalUtil.hide()
		onConfirm: -> ModalUtil.hide()

	render: ->
		cancelButton = null
		confirmButton = null
		if @props.ok
			buttons = [
				{
					value: 'OK'
					onClick: @props.onConfirm
					default: true
				}
			]

		else if @props.noYes
			buttons = [
				{
					value: 'No'
					onClick: @props.onCancel
				},
				{
					value: 'Yes'
					onClick: @props.onConfirm
					default: true
				}
			]

		else if @props.yesNo
			buttons = [
				{
					value: 'Yes'
					onClick: @props.onConfirm
				},
				{
					value: 'No'
					onClick: @props.onCancel
					default: true
				}
			]

		else if @props.cancelOk
			buttons = [
				{
					value: 'Cancel'
					altAction: true
					onClick: @props.onCancel
				},
				{
					value: 'OK'
					onClick: @props.onConfirm
					default: true
				}
			]

		`<div className="obojobo-draft--components--modal--simple-dialog">
			<Dialog centered buttons={buttons}>
				{this.props.children}
			</Dialog>
		</div>`