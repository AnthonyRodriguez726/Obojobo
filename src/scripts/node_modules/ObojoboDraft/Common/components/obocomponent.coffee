OboComponent = React.createClass
	getDefaultProps: ->
		tag: 'div'

	render: ->
		Component = @props.model.getComponentClass()
		Tag = @props.tag

		className = 'component'
		if @props.className?
			className += ' ' + @props.className

		`<Tag
			{...this.props}
			className={className}
			data-id={this.props.model.get('id')}
			data-type={this.props.model.get('type')}
		>
			{this.props.children}
		</Tag>`


module.exports = OboComponent