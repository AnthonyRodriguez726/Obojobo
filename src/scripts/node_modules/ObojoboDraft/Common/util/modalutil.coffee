Dispatcher = require 'ObojoboDraft/Common/flux/dispatcher'

ModalUtil =
	show: (component) ->
		Dispatcher.trigger 'modal:show',
			value:
				component: component

	hide: ->
		Dispatcher.trigger 'modal:hide'

	getCurrentModal: (state) ->
		if state.modals.length is 0 then return null
		state.modals[0]


module.exports = ModalUtil