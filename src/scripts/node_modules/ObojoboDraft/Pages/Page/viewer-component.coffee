require './viewer-component.scss'

Common = window.ObojoboDraft.Common

OboComponent = Common.components.OboComponent

module.exports = React.createClass
	render: ->
		`<OboComponent
			model={this.props.model}
			className="component-container obojobo-draft--pages--page"
		>
			{
				this.props.model.children.models.map((function(child, index) {
					var Component = child.getComponentClass()

					return <Component key={index} model={child} navState={this.props.navState} scoreState={this.props.scoreState} assessmentState={this.props.assessmentState} />
				}).bind(this))
			}
		</OboComponent>`