require './editbutton.scss'

getBackgroundImage = require 'ObojoboDraft/util/getBackgroundImage'
editButton = require 'svg-url?noquotes!./editbutton/assets/edit.svg'

module.exports = React.createClass
	getDefaultProps: ->
		indent: 0

	render: ->
		editButtonStyles =
			backgroundImage: ObojoboDraft.util.getBackgroundImage editButton

		`<div className="obojobo-draft--components--edit-button">
			<button
				onClick={this.props.onClick}
				style={editButtonStyles}
				tabIndex={this.props.shouldPreventTab ? '-1' : 1}
				disabled={this.props.shouldPreventTab}
			>Edit</button>
		</div>`