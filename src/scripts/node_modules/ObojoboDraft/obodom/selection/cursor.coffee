Text = require 'ObojoboDraft/components/text'
DOMUtil = require 'ObojoboDraft/page/domutil'

class Cursor
	constructor: (@chunk = null, @node = null, @offset = null) ->
		@textNode = DOMUtil.getFirstTextNodeOfElement @node
		@isValid = @chunk isnt null and @offset isnt null
		@isText = @isValid and @textNode isnt null

	clone: ->
		new Cursor @chunk, @node, @offset


module.exports = Cursor