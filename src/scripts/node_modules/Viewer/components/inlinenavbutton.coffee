require './inlinenavbutton.scss'

Dispatcher = window.ObojoboDraft.Common.flux.Dispatcher

InlineNavButton = React.createClass
	onClick: ->
		switch @props.type
			when 'prev'
				Dispatcher.dispatch {
					type: 'navPrev'
				}

			when 'next'
				Dispatcher.dispatch {
					type: 'navNext'
				}

	render: ->
		`<div
			className={'viewer--components--inline-nav-button' + ' is-' + this.props.type}
			onClick={this.onClick}
		>
			{this.props.title}
		</div>`


module.exports = InlineNavButton