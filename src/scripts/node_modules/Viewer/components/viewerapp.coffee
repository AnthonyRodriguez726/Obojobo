require './viewerapp.scss'

Common = window.ObojoboDraft.Common
Legacy = Common.models.Legacy

OboModel = Common.models.OboModel

JSONInput = require './jsoninput'

ViewerApp = React.createClass
	getInitialState: ->
		OBO.loadDependency 'https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.5.1/katex.min.css'

		if window.location.hash.indexOf('legacy') > -1
			moduleData = require 'json!../../../../../citing-sources-mla.json'
			model = Legacy.createModuleFromObo2ModuleJSON moduleData

			return ({
				model: model
			})

		if window.location.hash.indexOf('file') > -1
			moduleData = @props.moduleData

			#@TODO - do this elsewhere!
			return ({
				model: OboModel.create(moduleData)
			})

		if window.localStorage.__lo?
			try
				moduleData = JSON.parse(window.localStorage.__lo)
				return {
					model: OboModel.create(moduleData)
				}
			catch e
				# ...

		moduleData = @props.moduleData

		#@TODO - do this elsewhere!
		{
			model: OboModel.create(moduleData)
		}

	update: (json) ->
		try
			o = JSON.parse(json)
		catch e
			alert 'Error parsing JSON'
			@setState { model:@state.model }
			return

		localStorage.__lo = json

		newModule = OboModel.create o
		# console.clear()
		# console.log newModule

		@setState {
			model: newModule
		}

	onJsonInputToggle: (val) ->
		if(val)
			document.getElementById('viewer-app').classList.add('debug-edit-json')
		else
			document.getElementById('viewer-app').classList.remove('debug-edit-json')

	render: ->
		window.__lo = @state.model

		ModuleComponent = @state.model.getComponentClass()


		console.log 'json', @state.model

		`<div>
			<JSONInput onToggle={this.onJsonInputToggle} onChange={this.update} value={JSON.stringify(this.state.model.toJSON(), null, 2)} />
			<ModuleComponent model={this.state.model} />
		</div>`

module.exports = ViewerApp


