Dispatcher = window.ObojoboDraft.Common.flux.Dispatcher

ScoreUtil =
	getScoreForModel: (state, model) ->
		score = state.scores[model.get('id')]
		if typeof score is "undefined" or score is null then return null

		score

	setScore: (id, score) ->
		console.log('SET SCORE', id, score)
		Dispatcher.trigger 'score:set',
			value:
				id: id,
				score: score

	clearScore: (id) ->
		Dispatcher.trigger 'score:clear',
			value:
				id: id


module.exports = ScoreUtil