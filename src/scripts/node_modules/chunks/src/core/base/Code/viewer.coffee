require './viewer.scss'

ObojoboDraft = window.ObojoboDraft
TextGroup = ObojoboDraft.text.TextGroup
Text = ObojoboDraft.components.Text
TextChunk = ObojoboDraft.components.TextChunk

commandHandler = null

Code = React.createClass
	statics:
		type: 'ObojoboDraft.Chunks.Code'
		register: -> OBO.registerChunk Code, { default:true }
		getCommandHandler: (chunk) -> commandHandler

		createNodeDataFromDescriptor: (descriptor) ->
			textGroup: TextGroup.fromDescriptor descriptor.content.textGroup, Infinity, { indent:0 }
			type: descriptor.content.type

	render: ->
		data = @props.chunk.componentContent

		texts = data.textGroup.items.map (textItem, index) ->
			`<Text text={textItem.text} groupIndex={index} indent={textItem.data.indent} key={index} />`

		`<TextChunk className="obojobo-draft--chunks--code pad">
			<pre><code>{texts}</code></pre>
		</TextChunk>`



module.exports = Code