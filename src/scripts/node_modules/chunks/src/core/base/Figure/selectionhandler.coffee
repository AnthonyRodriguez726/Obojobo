ObojoboDraft = window.ObojoboDraft

TextGroupSelectionHandler = ObojoboDraft.chunk.textChunk.TextGroupSelectionHandler
FocusableSelectionHandler = ObojoboDraft.chunk.focusableChunk.FocusableSelectionHandler

Chunk = ObojoboDraft.models.Chunk

module.exports = class SelectionHandler extends TextGroupSelectionHandler
	selectStart: (selection, chunk) ->
		FocusableSelectionHandler.prototype.selectStart selection, chunk

	getCopyOfSelection: (selection, chunk) ->
		clone = Chunk.create()
		fullClone = super selection, chunk

		clone.componentContent.textGroup = fullClone.componentContent.textGroup

		clone