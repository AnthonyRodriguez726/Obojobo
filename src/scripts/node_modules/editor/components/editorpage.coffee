	sendHTML: (html) ->
		chunks = HTMLToOboNodes(html)

		Util.deleteSelection @props.selection
		@send 'splitText', @props.selection.chunk.start.chunk
		splitNode = @props.selection.chunk.start.chunk.nextSibling()
		for chunk in chunks
			splitNode.addBefore chunk

		@send 'selectEnd', chunks[chunks.length - 1]

		@props.updateFn()

