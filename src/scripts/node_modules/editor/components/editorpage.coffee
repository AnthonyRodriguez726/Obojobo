	sendHTML: (html) ->
		chunks = HTMLToOboNodes(html)

		Util.deleteSelection @state.selection
		@send 'splitText', @state.selection.chunk.start.chunk
		splitNode = @state.selection.chunk.start.chunk.nextSibling()
		for chunk in chunks
			splitNode.addBefore chunk

		@send 'selectEnd', chunks[chunks.length - 1]

		@props.updateFn()

