require './sidemenuhandle.scss'

Assets = require('ObojoboDraft').Assets

SideMenuHandle = React.createClass
	getDefaultProps: ->
		yPos: 0
		height: 0

	render: ->
		styles =
			position: 'absolute'
			left: '0'
			top: @props.yPos
			height: @props.height
			backgroundImage: Assets.getBackgroundImage(Assets.SIDEMENU_HANDLE)

		`<div
			className='editor--components--side-menu--side-menu-handle'
			style={styles}
		/>`


module.exports = SideMenuHandle