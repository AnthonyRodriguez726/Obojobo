extends layout

block head
  script(src='/static/react/react.min.js')
  script(src='/static/react-dom/react-dom.min.js')

block content
  h1= title
  p Welcome to #{title}

  div(id="body")

  script.
    var elm = React.createElement('h1', {title: "#{title}"}, 'REACT IS WORKING!');
    ReactDOM.render(elm, document.getElementById('body'));
